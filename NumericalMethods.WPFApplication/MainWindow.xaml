<Window x:Class="NumericalMethods.WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethods.WPFApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="630" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <TabControl Margin="0,0,0,-26">
            <TabItem Header="Derivation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5 15 5 0">
                        <Grid Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">F(x) =</Label>
                            <TextBox Grid.Column="1" Name="Differentiation_FunctionTextBox"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Start X</Label>
                            <TextBox Grid.Column="1" Name="Differentiation_StartXTextBox" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">End X</Label>
                            <TextBox Grid.Column="1" Name="Differentiation_EndXTextBox" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Step</Label>
                            <TextBox Grid.Column="1" Name="Differentiation_StepTextBox" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0" Name="Differentiation_NumberOfMembersGrid" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Members Count</Label>
                            <TextBox Grid.Column="1" Name="Differentiation_NumberOfMembers" PreviewTextInput="Differentiation_IntTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0" Name="Differentiation_AccuracyGrid" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="100"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Accuracy</Label>
                            <TextBox Grid.Column="1" Name="Differentiation_Accuracy" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Button Name="Differentiation_AddNodesOnChart" Height="30" Margin="0 10 0 0" Click="Differentiation_AddNodesOnChart_Click">ADD POINTS ON CHART</Button>
                        <Border Margin="0 10 0 0" BorderThickness="1" BorderBrush="Black">
                            <StackPanel Margin="5 5 5 5">
                                <Label Margin="0 10 0 0" HorizontalContentAlignment="Center">Interpolation</Label>
                                <ComboBox Name="Differentiation_InterpolationFunctionTypeComboBox" Height="30"  Margin="0 10 0 0"/>
                                <Button Name="Differentiation_AddOnChartInterpolationButton" Height="30" Margin="0 10 0 0" Click="Differentiation_AddOnChartInterpolationButton_Click">ADD ON CHART</Button>
                            </StackPanel>
                        </Border>
                        <Border Margin="0 10 0 0" BorderThickness="1" BorderBrush="Black">
                            <StackPanel Margin="5 5 5 5">
                                <Label Margin="0 10 0 0" HorizontalContentAlignment="Center">Differentiation</Label>
                                <ComboBox Name="Differentiation_FunctionTypeComboBox" Height="30"  Margin="0 10 0 0" SelectionChanged="Differentiation_FunctionTypeComboBox_SelectionChanged"/>
                                <Grid Height="30" Margin="0 10 0 0">
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition Width="103"/>
                                        <ColumnDefinition/>
                                    </Grid.ColumnDefinitions>
                                    <Label Grid.Column="0">Derivative degree</Label>
                                    <TextBox Grid.Column="1" Name="DerivativeDegreeTextBox"></TextBox>
                                </Grid>
                                <Button Name="Differentiation_AddOnChartButton" Height="30" Margin="0 10 0 0" Click="Differentiation_AddOnChartButton_Click">ADD ON CHART</Button>
                            </StackPanel>
                        </Border>
                        <Button Name="Differentiation_ClearChartButton" Height="30" Margin="0 10 0 0" Click="Differentiation_ClearChartButton_Click">CLEAR CHART</Button>
                    </StackPanel>
                    <Grid Grid.Column="1">
                        <WpfPlot Name="Differentiation_MainChart"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="Integrating">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5 15 5 0">
                        <Grid Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">F(x) =</Label>
                            <TextBox Grid.Column="1" Name="Integration_FunctionTextBox"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Start X</Label>
                            <TextBox Grid.Column="1" Name="Integration_StartXTextBox" PreviewTextInput="Integration_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">End X</Label>
                            <TextBox Grid.Column="1" Name="Integration_EndXTextBox" PreviewTextInput="Integration_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Step</Label>
                            <TextBox Grid.Column="1" Name="Integration_StepTextBox" PreviewTextInput="Integration_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0" Name="Integration_CountPointGrid" Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Count point</Label>
                            <TextBox Grid.Column="1" Name="Integration_CountPointTextBox" PreviewTextInput="Integration_IntTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0" Name="Integration_CountNodesGrid"  Visibility="Collapsed">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="80"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Count nodes</Label>
                            <TextBox Grid.Column="1" Name="Integration_CountNodesTextBox" PreviewTextInput="Integration_IntTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Label Margin="0 10 0 0" HorizontalContentAlignment="Center">Integration method</Label>
                        <ComboBox Name="Integration_MethodComboBox" Height="30"  Margin="0 10 0 0" SelectionChanged="Integration_MethodComboBox_SelectionChanged"/>
                        <Button Name="Integration_CalculateButton" Height="30" Margin="0 10 0 0" Click="Integration_CalculateButton_Click">CALCULATE</Button>
                    </StackPanel>
                    <Grid Grid.Column="1">
                        <WpfPlot Name="Integration_MainChart"/>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="System of non-linear equations">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="2*"></ColumnDefinition>
                        <ColumnDefinition Width="8*"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5 15 5 0">
                        <Grid Height="550">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="5*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="4*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                                <RowDefinition Height="1*"></RowDefinition>
                            </Grid.RowDefinitions>

                            <Grid Grid.Row="0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" VerticalAlignment="Center">SNE Method</Label>
                                <ComboBox Grid.Column="1" Margin="0 10 10 0" Name="SNE_methodComboBox"></ComboBox>
                            </Grid>
                            <Grid Grid.Row="1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" VerticalAlignment="Center">Count of equations</Label>
                                <ComboBox Grid.Column="1" Margin="0 10 10 0" Name="SNE_equationsCountComboBox"></ComboBox>
                            </Grid>
                            <Grid Grid.Row="2">
                                <Button Name="SNE_SelectButton" Height="30" Click="SNE_SelectButton_Click">SELECT</Button>
                            </Grid>
                            <Grid Grid.Row="3">
                                <ScrollViewer Background="LightGray">
                                    <Grid x:Name="SNE_systemOfEquationsGrid"></Grid>
                                </ScrollViewer>
                            </Grid>
                            <Grid Grid.Row="4">
                                <Label VerticalAlignment="Center">Initial approximation</Label>
                            </Grid>
                            <Grid Grid.Row="5">
                                <ScrollViewer Background="LightGray">
                                    <Grid x:Name="SNE_initialApproximationGrid"></Grid>
                                </ScrollViewer>
                            </Grid>
                            <Grid Grid.Row="6">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                    <ColumnDefinition Width="1*"></ColumnDefinition>
                                </Grid.ColumnDefinitions>
                                <Label Grid.Column="0" VerticalAlignment="Center">Accuracy</Label>
                                <TextBox Grid.Column="1" Margin="0 10 10 0" Name="SNE_AccuracyTextBox" PreviewTextInput="SNE_textBox_PreviewTextInput"></TextBox>
                            </Grid>
                            <Grid Grid.Row="7">
                                <Button Name="SNE_CalculateButton" Height="30" Click="SNE_CalculateButton_Click" >CALCULATE</Button>
                            </Grid>
                        </Grid>
                    </StackPanel>

                    <Grid Grid.Column="1">
                        <Border BorderBrush="Black" BorderThickness="1 0 0 0">
                            <ScrollViewer Background="LightGray">
                                <DataGrid x:Name="SNE_ResultDataGrid" IsReadOnly="True"></DataGrid>
                            </ScrollViewer>
                        </Border>
                    </Grid>
                </Grid>
            </TabItem>
            <TabItem Header="DerivationEquation">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="150"/>
                        <ColumnDefinition/>
                    </Grid.ColumnDefinitions>
                    <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5 15 5 0">
                        <Grid Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="70"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Derivative</Label>
                            <TextBox Grid.Column="1" Name="DifferentiationEquation_DerivativeTextBox"></TextBox>
                        </Grid>
                        <Grid Height="30">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0" Name="DifferentiationEquation_MaxDerivativeFunctionLabel">Y'''</Label>
                            <TextBox Grid.Column="1" Name="DifferentiationEquation_MaxDerivativeFunctionTextBox"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">End X</Label>
                            <TextBox Grid.Column="1" Name="DifferentiationEquation_EndXTextBox" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">Step</Label>
                            <TextBox Grid.Column="1" Name="DifferentiationEquation_StepTextBox" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="50"/>
                                <ColumnDefinition/>
                            </Grid.ColumnDefinitions>
                            <Label Grid.Column="0">X</Label>
                            <TextBox Grid.Column="1" Name="DifferentiationEquation_XTextBox" PreviewTextInput="Differentiation_DoubleTextBox_PreviewTextInput"></TextBox>
                        </Grid>
                        <Grid Height="30"  Margin="0 10 0 0">
                            <ScrollViewer Background="LightGray">
                                <Grid Name="DifferentiationEquation_Grid"></Grid>
                            </ScrollViewer>
                        </Grid>
                        <Border Margin="0 10 0 0" BorderThickness="1" BorderBrush="Black">
                            <StackPanel Margin="5 5 5 5">
                                <Label Margin="0 10 0 0" HorizontalContentAlignment="Center">Differentiation</Label>
                                <ComboBox Name="DifferentiationEquation_FunctionTypeComboBox" Height="30"  Margin="0 10 0 0"/>
                                <Button Name="DifferentiationEquation_AddOnChartButton" Height="30" Margin="0 10 0 0" Click="DifferentiationEquation_AddOnChartButton_Click">ADD ON CHART</Button>
                            </StackPanel>
                        </Border>
                        <Border Margin="0 10 0 0" BorderThickness="1" BorderBrush="Black">
                            <StackPanel Margin="5 5 5 5">
                                <Label Margin="0 10 0 0" HorizontalContentAlignment="Center">Interpolation</Label>
                                <ComboBox Name="DifferentiationEquation_InterpolationFunctionTypeComboBox" Height="30"  Margin="0 10 0 0"/>
                                <Button Name="DifferentiationEquation_AddOnChartInterpolationButton" Height="30" Margin="0 10 0 0" Click="DifferentiationEquation_AddOnChartInterpolationButton_Click">ADD ON CHART</Button>
                            </StackPanel>
                        </Border>
                        <Button Name="DifferentiationEquation_ClearChartButton" Height="30" Margin="0 10 0 0" Click="DifferentiationEquation_ClearChartButton_Click">CLEAR CHART</Button>
                    </StackPanel>
                    <Grid Grid.Column="1">
                        <WpfPlot Name="DifferentiationEquation_MainChart"/>
                    </Grid>
                </Grid>
            </TabItem>
        </TabControl>
    </Grid>
</Window>
