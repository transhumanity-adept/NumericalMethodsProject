<Window x:Class="NumericalMethods.WPFApplication.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:NumericalMethods.WPFApplication"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="150"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <StackPanel Grid.Column="0" VerticalAlignment="Top" Margin="5 15 5 0">
            <ComboBox Name="Selector" Height="30"/>
            <Button Name="UpdateButton" Height="30" Margin="0 10 0 0" Click="UpdateButton_Click">Update</Button>
        </StackPanel>
        <Grid Grid.Column="1">
            <WpfPlot Name="MainChart"/>
        </Grid>
    </Grid>
</Window>
